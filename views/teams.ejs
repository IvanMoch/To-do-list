<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Teams</title>
  <link rel="stylesheet" href="teams.css">
  <script>
    const userId = '<%= id %>' // ---------> Getting the user Id (used in userPage.js)
  </script>
</head>
<body>
  <!-- Header -->
  <header class="header">
    <!-- Website Title -->
    <div class="header-title">
      <h1>To-Do-Web</h1>
    </div>

    <!-- Navbar -->
    <nav class="navbar">
      <button class="nav-button" id="taskButton" >Tasks</button>
      <button class="nav-button" id="teamsButton">Teams</button>
      <button class="nav-button" >User</button>
    </nav>

    <!-- Logout Button -->
    <div class="logout">
      <button id="logout-button">Logout</button>
    </div>
  </header>

  <!-- Main Content -->
  <main>
    <h2>Your Teams</h2>
    <button class="create-team-button" id="createButton">Create New Team</button>
    <div id="teamsContainer" class="teams-container"></div>

    <div id="createTeamModal" class="modal" style="display: none;">
  <div class="modal-content">
    <button class="close-button" onclick="closeCreateTeamModal()">Ã—</button>
    <h3>Create New Team</h3>
    <form id="createTeamForm">
      <!-- Title Field -->
      <label for="teamTitle">Team Title</label>
      <input type="text" id="teamTitle" name="teamTitle" placeholder="Enter team title" required>

      <!-- Description Field -->
      <label for="teamDescription">Description</label>
      <input type="text" id="teamDescription" name="teamDescription" placeholder="Enter team description" required>

      <!-- Members Field -->
      <label for="teamMembers">Add Members</label>
      <input type="text" id="teamMembers" name="teamMembers" placeholder="Enter member IDs, separated by commas" required>

      <!-- Buttons -->
      <div class="form-buttons">
        <button type="button" onclick="clearCreateTeamForm()" class="clear-button">Clear</button>
        <button type="submit" class="save-button">Save Team</button>
      </div>
    </form>
  </div>
</div>

  </main>

  <!-- Footer -->
  <footer class="footer">
    <p>&copy; 2024 My Web App. All rights reserved.</p>
  </footer>

  <script src="teams.js"></script>
</body>
</html>
